{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OmniTrade",
  "version": "0.9.5",
  "identifier": "io.connectry.omnitrade",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OmniTrade",
        "width": 1200,
        "height": 780,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "createUpdaterArtifacts": false,
    "category": "Finance",
    "shortDescription": "Multi-exchange AI trading terminal",
    "longDescription": "OmniTrade Desktop â€” Multi-exchange AI trading via MCP. 107 exchanges. One AI. Paper trading, live trading, alerts, and DCA strategies.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
